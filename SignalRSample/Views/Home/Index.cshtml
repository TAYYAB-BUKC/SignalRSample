@{
    ViewData["Title"] = "Home Page";
}

<div class="container">

    <div class="row border p-1 mt-3">
        <h3>Subscribed List: </h3>
        <hr />
        <div class="row p-2">
            <div class="col-3">
                <label style="color:#236E50" id="lbl_houseJoined">Subscribed House Names</label>
            </div>
        </div>
    </div>
    <div class="row border p-1 mt-3">
        <h3>Subscribe: </h3>
        <hr />
        <div class="row p-2">
            <div class="col-3">
                <button class="btn" style="background-color:#B52033" id="btn_gryffindor">Gryffindor</button>
            </div>
            <div class="col-3">
                <button class="btn" style="background-color:#236E50" id="btn_slytherin">Slytherin</button>
            </div>
            <div class="col-3">
                <button class="btn" style="background-color:#EDB526" id="btn_hufflepuff">Hufflepuff</button>
            </div>
            <div class="col-3">
                <button class="btn" style="background-color:#10749F" id="btn_ravenclaw">Ravenclaw</button>
            </div>
        </div>
    </div>
    <div class="row border p-1 mt-3">
        <h3>Unsubscribe: </h3>
        <hr />
        <div class="row p-2">
            <div class="col-3">
                <button class="btn" style="background-color:#B52033;display:none" id="btn_un_gryffindor">Gryffindor</button>
            </div>
            <div class="col-3">
                <button class="btn" style="background-color:#236E50;display:none" id="btn_un_slytherin">Slytherin</button>
            </div>
            <div class="col-3">
                <button class="btn" style="background-color:#EDB526;display:none" id="btn_un_hufflepuff">Hufflepuff</button>
            </div>
            <div class="col-3">
                <button class="btn" style="background-color:#10749F;display:none" id="btn_un_ravenclaw">Ravenclaw</button>
            </div>
        </div>
    </div>
    <div class="row border p-1 mt-3">
        <h3>Trigger Notification: </h3>
        <hr />
        <div class="row p-2">
            <div class="col-3">
                <button class="btn" style="background-color:#B52033" id="trigger_gryffindor">Gryffindor</button>
            </div>
            <div class="col-3">
                <button class="btn" style="background-color:#236E50" id="trigger_slytherin">Slytherin</button>
            </div>
            <div class="col-3">
                <button class="btn" style="background-color:#EDB526" id="trigger_hufflepuff">Hufflepuff</button>
            </div>
            <div class="col-3">
                <button class="btn" style="background-color:#10749F" id="trigger_ravenclaw">Ravenclaw</button>
            </div>
        </div>
    </div>

    <br />
    <br />

    <div class="row border p-1">
        <h3>Voting </h3>
        <div class="col-4">
            <div>Voter A Count - <span id="voterACounter"></span></div>
        </div>
        <div class="col-4">
            <div>Voter B Count - <span id="voterBCounter"></span></div>
        </div>
        <div class="col-4">
            <div>Voter C Count - <span id="voterCCounter"></span></div>

        </div>
        <hr />
        <p>Url to Votes:</p>
        <div>1. <a target="_blank" href="https://localhost:7224/Home/AddVote?voterID=VoterA">Vote For A</a></div>
        <div>2. <a target="_blank" href="https://localhost:7224/Home/AddVote?voterID=VoterB">Vote For B</a></div>
        <div>3. <a target="_blank" href="https://localhost:7224/Home/AddVote?voterID=VoterC">Vote For C</a></div>
    </div>

    <br />
    <br />

    <div class="row">
        <div class="col-3">
            Total Views: 
        </div>
        <div class="col-4">
            <span id="totalViews"></span>
        </div>
    </div>
    <div class="row">
        <div class="col-3">
            Total Users: 
        </div>
        <div class="col-4">
            <span id="totalUsers"></span>
        </div>
    </div>
</div>

@section Scripts {
    <script asp-append-version="true" type="text/javascript" src="~/js/custom/user.js"></script>
    <script asp-append-version="true" type="text/javascript" src="~/js/custom/voting.js"></script>
}